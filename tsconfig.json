{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@example/*": ["./examples/react/src/*"]
    }
  },
  "include": ["lib", "examples"],
  "exclude": ["node_modules", "dist"]
}
